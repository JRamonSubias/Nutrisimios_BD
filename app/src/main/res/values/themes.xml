<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Nutrisimios_BD" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>


        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="CardViewRegisterStyle" parent="CardView">
        <item name="android:minWidth">300dp</item>
        <item name="cardCornerRadius">15dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:backgroundTint">@color/green</item>
    </style>

    <style name="FullScreenDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">#EAD310</item>
        <item name="colorPrimaryDark">#2345CF</item>
        <item name="colorAccent">#E10721</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Estilos para pantalla completa-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

</resources>